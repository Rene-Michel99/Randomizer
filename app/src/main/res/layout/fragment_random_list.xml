<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RandomList"
    android:id="@+id/id_list"
    android:background="#00022E"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrada:"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:layout_marginTop="20dp">
        </TextView>

        <EditText
            android:id="@+id/pair_1"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:background="#FFFFFF"
            android:layout_marginTop="12dp">
        </EditText>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pareamento:"
            android:textSize="18dp"
            android:layout_marginTop="8dp"
            android:textColor="#FFFFFF">
        </TextView>

        <EditText
            android:id="@+id/pair_2"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:background="#FFFFFF">
        </EditText>
    </RelativeLayout>

    <TextView
        android:id="@+id/result_list"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#01006C"
        android:shadowColor="@color/cardview_light_background"
        android:text="Resultado"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textSize="16dp"
        android:enabled="true"
        android:textIsSelectable="true"
        android:focusable="true"
        android:longClickable="true">

    </TextView>

    <Button
        android:id="@+id/generate_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gerar"
        android:backgroundTint="#FF073A"
        android:textColor="#FFFFFF"
        android:textSize="16dp">

    </Button>



</LinearLayout>